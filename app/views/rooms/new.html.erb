<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        详细信息
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f|%>
            <div class="row form-group">

              <div class="col-md-4 select">
                <label>房间类型</label>
                <%= f.select :home_type, [["公寓","公寓"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                             id: "home_type", prompt: "选择...", class: "form_control" %>
              </div>

              <div class="col-md-4 select">
                <label>房型</label>
                <%= f.select :room_type, [["Entire","Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                             id: "room_type", prompt: "选择...", class: "form_control" %>
              </div>

              <div class="col-md-4 select">
                <label>入住人数</label>
                <%= f.select :accommodate, [["1",1], ["2", 2], ["3", 3], ["4", 4]],
                             id: "accommodate", prompt: "选择...", class: "form_control" %>
              </div>

              <div class="col-md-4 select">
                <label>卧室</label>
                <%= f.select :bed_room, [["1",1], ["2", 2], ["3", 3], ["4", 4]],
                             id: "bed_room", prompt: "选择...", class: "form_control" %>
              </div>

              <div class="col-md-4 select">
                <label>厨房</label>
                <%= f.select :bed_room, [["1",1], ["2", 2], ["3", 3], ["4", 4]],
                             id: "bed_room", prompt: "选择...", class: "form_control" %>
              </div>

              <div class="col-md-4 select">
                <label>浴室</label>
                <%= f.select :bath_room, [["1",1], ["2", 2], ["3", 3], ["4", 4]],
                             id: "bath_room", prompt: "选择...", class: "form_control" %>
              </div>

            </div>

            <div class="text-center">
              <%= f.submit "创建我的房间", class: "btn btn-primary w-50" %>
            </div>

          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>

  
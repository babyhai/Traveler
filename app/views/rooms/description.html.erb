<%= render 'room_header' %>
  <div class="card-header">
    描述
  </div>
  <div class="card-body">
    <div class="container">
      <%= form_for @room do |f|%>

        <div class="row">
          <div class="form-group w-100">
            <label>标题</label>
            <%= f.text_field :listing_name, placeholder: "标题", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group w-100">
            <label>简介</label>
            <%= f.text_area :summary, rows: 5, placeholder: "详细描述", class: "form-control" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "保存", class: "btn btn-info w-50" %>
        </div>

      <% end %>
    </div>
  </div>
<%= render 'room_footer' %>
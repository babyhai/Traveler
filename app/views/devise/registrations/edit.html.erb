<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <%= link_to "View My Profile", user_path(resource.id) %>
      </div>
    </div>
  </div>
  <div class="col-md-8 text-center">
    <div class="card">
        <div class="card-header text-center">我的资料</div>
        <div class="card-body px-md-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "shared/devisemessage" %>

            <div class="form-group">
              <%= f.text_field :fullname, autofocus: true, placeholder: "名称", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.text_field :phone_number, autofocus: true, placeholder: "电话号码", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, placeholder: "个人简介", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "电子邮箱", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>目前正在等待确认: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.password_field :current_password, autocomplete: "off", placeholder: "当前密码", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "新密码", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "确认密码", class: "form-control" %>
            </div>



            <div class="actions text-center my-3 ">
              <%= f.submit "保存", class: "btn btn-primary px-4 w-100" %>
            </div>
          <% end %>

          <hr>
          <div class="text-center my-3">
          <%= button_to "注销我的账号", registration_path(resource_name), data: { confirm: "确定注销么?" }, method: :delete, class: "btn btn-secondery w-100" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
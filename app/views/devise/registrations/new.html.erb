<div class="row justify-content-center">
  <div class="col-md-4">
    <br>
    <h2 class="text-center">注册</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/devisemessage" %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "名称", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "邮箱", class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "密码", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "确认密码", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "注册", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
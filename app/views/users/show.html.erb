<div class="row">
  <div class="col-md-3">
    <div class="card">
      <%= avatar_url current_user, class: "rounded w-100" %>

    </div>
    <div class="card mt-4">
      <div class="card-header">
        个人信息
      </div>
      <div class="card-body">
        <div class="list-group">
          
          <% if @user.confirmation_token %>
            <div class="list-group-item border-0">
              电子邮件地址 <span class="float-right"><i class="fa fa-check-circle-o color-info"></i></span>
            </div>
          <% end %>
          <% if @user.phone_number %>
            <div class="list-group-item border-0">
              电话号码 <span class="float-right"><i class="fa fa-check-circle-o color-info"></i></span>
            </div>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9 ">
    <h2 class="text-left"><%= @user.fullname %></h2>
    <div class="discription">
      <%= @user.description %>
    </div>
    <h4 class="mt-3">房源列表(<%= @rooms.length %>)</h4>
    <div class="row">
      <%= render partial: "rooms/rooms_list", locals: {rooms:  @rooms} %>
    </div>
    <br><br>

    <h4>来自客人的评论 (<%= @guest_reviews.count %>)</h4>
    <div class="">
      <%= render "reviews/guest_list" %>
    </div>
    <br>

    <h4>Reviews From Hosts (<%= @host_reviews.count %>)</h4>
    <div class="">
      <%= render "reviews/host_list" %>
    </div>
    <br>

  </div>
</div>